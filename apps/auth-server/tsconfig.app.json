{
    "extends": "./tsconfig.json",
    "include": ["src/**/*.ts"],
    "exclude": ["vite.config.mts", "src/**/*.spec.ts"],
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "CommonJS",
        "outDir": "../../dist/out-tsc",
        "target": "ES2024",
        "moduleResolution": "node",
        "types": ["node"]
    }
}
