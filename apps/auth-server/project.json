{
    "name": "auth-server",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/auth-server/src",
    "projectType": "application",
    "tags": ["platform:server", "scope:auth-server"],
    "targets": {
        "prisma-generate": {
            "executor": "nx:run-commands",
            "inputs": ["{projectRoot}/prisma.config.ts", "{projectRoot}/prisma/schema.prisma"],
            "outputs": ["{projectRoot}/src/prisma"],
            "cache": true,
            "options": {
                "command": "prisma generate",
                "cwd": "{projectRoot}"
            }
        },
        "prisma-seed": {
            "dependsOn": ["prisma-generate"],
            "executor": "nx:run-commands",
            "options": {
                "command": "prisma db seed",
                "cwd": "{projectRoot}"
            }
        },
        "prisma-migrate-reset": {
            "dependsOn": ["prisma-generate"],
            "executor": "nx:run-commands",
            "options": {
                "command": "prisma migrate reset --force",
                "cwd": "{projectRoot}"
            }
        },
        "docker-build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "docker buildx build -f {projectRoot}/.docker/Dockerfile -t dndmapp/auth-server:latest ."
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "dependsOn": ["prisma-generate"],
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "cache": true,
            "options": {
                "command": "webpack-cli build",
                "cwd": "{projectRoot}"
            },
            "defaultConfiguration": "production",
            "configurations": {
                "production": {
                    "args": ["--node-env production"]
                },
                "development": {
                    "args": ["--node-env development"]
                }
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "continuous": true,
            "options": {
                "buildTarget": "auth-server:build:development",
                "runBuildTargetDependencies": false,
                "inspect": true,
                "port": 9200
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "outputs": ["{workspaceRoot}/reports/{projectRoot}"],
            "cache": true,
            "options": {
                "cwd": "{projectRoot}"
            },
            "defaultConfiguration": "ci",
            "configurations": {
                "ci": {
                    "command": "vitest run"
                },
                "development": {
                    "command": "vitest --ui --watch"
                }
            }
        }
    }
}
