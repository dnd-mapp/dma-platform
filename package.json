{
  "name": "dma-platform",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "private": true,
  "description": "The D&D Mapp (DMA) monorepo: A modular Nx workspace of Angular apps and NestJS services designed for D&D 5th Edition campaign management, world-building, and virtual tabletop simulation.",
  "keywords": [
    "dnd-5e",
    "nx-workspace",
    "angular",
    "nestjs",
    "prisma",
    "mariadb",
    "virtual-tabletop",
    "monorepo"
  ],
  "author": "Oscar Wellner <oscar.wellner@gmail.com>",
  "homepage": "https://github.com/dnd-mapp/dma-platform",
  "bugs": "https://github.com/dnd-mapp/dma-platform/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnd-mapp/dma-platform.git"
  },
  "workspaces": [
    "./apps/*",
    "./libs/*"
  ],
  "scripts": {
    "nx": "pnpm exec nx",
    "gen:ssl-cert": "mkcert -key-file ssl-key.pem -cert-file ssl-cert.pem localhost.www.dndmapp.dev localhost.auth.dndmapp.dev localhost 127.0.0.1"
  },
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=24.13.0",
    "npm": ">=11.7.0",
    "pnpm": ">=10.28.1"
  },
  "devEngines": {
    "packageManager": [
      {
        "name": "pnpm",
        "version": "10.28.1",
        "onFail": "error"
      },
      {
        "name": "npm",
        "version": "11.7.0",
        "onFail": "error"
      }
    ]
  },
  "msw": {
    "workerDirectory": [
      ".msw"
    ]
  },
