{
    "version": "2.0.0",
    "tasks": [
        // auth-client
        {
            "label": "auth-client:build",
            "type": "shell",
            "command": "pnpm nx build auth-client",
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "auth-client:serve",
            "type": "shell",
            "command": "pnpm nx serve auth-client",
            "isBackground": true,
            "problemMatcher": ["$tsc-watch"]
        },
        // auth-server
        {
            "label": "auth-server:prisma:migrate-dev",
            "type": "shell",
            "command": "pnpm prisma migrate dev",
            "options": {
                "cwd": "${workspaceFolder}/apps/auth-server"
            },
            "problemMatcher": []
        },
        {
            "label": "auth-server:prisma:migrate-reset",
            "type": "shell",
            "command": "pnpm prisma migrate reset --force",
            "options": {
                "cwd": "${workspaceFolder}/apps/auth-server"
            },
            "problemMatcher": []
        },
        {
            "label": "auth-server:prisma:seed",
            "type": "shell",
            "command": "pnpm prisma seed",
            "options": {
                "cwd": "${workspaceFolder}/apps/auth-server"
            },
            "problemMatcher": []
        },
        {
            "label": "auth-server:prisma:generate",
            "type": "shell",
            "command": "pnpm prisma generate",
            "options": {
                "cwd": "${workspaceFolder}/apps/auth-server"
            },
            "problemMatcher": []
        },
        {
            "label": "auth-server:build",
            "type": "shell",
            "command": "pnpm nx build auth-server",
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "auth-server:serve",
            "type": "shell",
            "command": "pnpm nx serve auth-server",
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "pattern": {
                    "regexp": "^.*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "webpack compiled",
                    "endsPattern": "Nest application successfully started"
                }
            }
        },
        // dnd-mapp
        {
            "label": "dnd-mapp:build",
            "type": "shell",
            "command": "pnpm nx build dnd-mapp",
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "dnd-mapp:serve",
            "type": "shell",
            "command": "pnpm nx serve dnd-mapp",
            "isBackground": true,
            "problemMatcher": ["$tsc-watch"]
        }
    ]
}
