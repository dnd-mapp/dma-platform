{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultProject": "dnd-mapp",
    "defaultBase": "main",
    "neverConnectToCloud": true,
    "namedInputs": {
        "sharedGlobals": [],
        "default": ["{projectRoot}/**/*", "sharedGlobals"],
        "production": [
            "default",
            "!{projectRoot}/vite.config.mts",
            "!{projectRoot}/**/*.spec.ts",
            "!{projectRoot}/tsconfig.spec.json",
            "!{projectRoot}/jest.config.cts",
            "!{projectRoot}/test/**/*.ts"
        ]
    },
    "cli": {
        "packageManager": "pnpm"
    },
    "workspaceLayout": {
        "appsDir": "apps",
        "libsDir": "libs"
    },
    "targetDefaults": {
        "@angular/build:application": {
            "dependsOn": ["^build"],
            "inputs": ["production", "^production"],
            "cache": true
        },
        "@nx/eslint:lint": {
            "inputs": ["default", "{workspaceRoot}/eslint.config.mjs"],
            "cache": true
        }
    },
    "plugins": [
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        },
        {
            "plugin": "@nx/jest/plugin",
            "options": {
                "targetName": "test"
            },
            "exclude": ["e2e/auth-server/**/*"]
        },
        {
            "plugin": "@nx/playwright/plugin",
            "options": {
                "targetName": "e2e"
            }
        },
        {
            "plugin": "@nx/webpack/plugin",
            "options": {
                "buildTargetName": "build",
                "serveTargetName": "serve",
                "previewTargetName": "preview",
                "buildDepsTargetName": "build-deps",
                "watchDepsTargetName": "watch-deps",
                "serveStaticTargetName": "serve-static"
            }
        }
    ],
    "generators": {
        "@nx/angular:application": {
            "e2eTestRunner": "playwright",
            "linter": "eslint",
            "style": "css",
            "unitTestRunner": "vitest-analog",
            "bundler": "esbuild",
            "ssr": false
        },
        "@nx/angular:component": {
            "style": "css",
            "changeDetection": "OnPush",
            "type": "component"
        },
        "@nx/angular:directive": {
            "type": "directive"
        },
        "@nx/angular:library": {
            "buildable": false,
            "linter": "eslint",
            "publishable": false,
            "unitTestRunner": "vitest-analog"
        },
        "@nx/angular:service": {
            "addTypeToClassName": true,
            "type": "service"
        },
        "@nx/js:library": {
            "bundler": "none",
            "unitTestRunner": "vitest",
            "linter": "eslint"
        },
        "@nx/nest:application": {
            "linter": "eslint",
            "unitTestRunner": "jest"
        }
    }
}
